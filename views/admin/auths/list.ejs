        <script>
            layui.use(['table', 'form'], function() {
                var table = layui.table,
                    form = layui.form;

                //第一个实例
                table.render({
                    elem: '#adminList'
                    ,height: 312
                    ,url: '/admin/auths/list/adminList' //数据接口
                    ,page: true //开启分页
                    ,cols: [[ //表头
                        {field: 'id', fixed: 'left', title: 'ID', width:'15%', sort: true}
                        ,{field: 'username', title: '用户名', width:'25%', sort: true}
                        ,{field: 'nickname', title: '昵称', width:'30%', sort: true}
                        ,{field: 'rolename', title: '角色', width:'30%', sort: true}
                    ]]
                });
            });
